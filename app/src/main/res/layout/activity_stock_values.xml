<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <org.eazegraph.lib.charts.ValueLineChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        app:egActivateIndicatorShadow="true"
        app:egEmptyDataText="No data to plot!"
        app:egIndicatorLineColor="#FE6DA8"
        app:egIndicatorShadowColor="@color/material_green_A700"
        app:egIndicatorShadowStrength="10dp"
        app:egIndicatorTextColor="@color/material_green_A700"
        app:egLegendHeight="40dp"
        app:egShowDecimal="true"
        app:egShowLegendBeneathIndicator="true"
        app:egShowValueIndicator="true"
        app:egUseCubic="false"
        app:egUseOverlapFill="false"
        app:egXAxisStroke="8dp"/>
</LinearLayout>